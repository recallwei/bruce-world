generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BRUCE_WORLD_DATABASE_URL")
  shadowDatabaseUrl  = env("BRUCE_WORLD_SHADOW_DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  updateAt  DateTime? @map("update_at") @db.Timestamp(3)
  deleteAt  DateTime? @map("delete_at") @db.Timestamp(3)
  username  String    @unique @db.VarChar(25)
  email     String    @unique @db.VarChar(25)
  name      String?   @db.VarChar(25)
  avatarUrl String?   @map("avatar_url")
  biography String?   @db.VarChar(50)
  location  String?   @db.VarChar(25)
  role      Role      @default(USER)
  oauths    OAuth[]
  notes     Note[]
  tags      Tag[]
  themes    Theme[]

  @@map("user")
}

enum Role {
  ADMIN      @map("admin")
  USER       @map("user")
  MEMBERSHIP @map("membership")
  BETA       @map("beta")

  @@map("role")
}

model OAuth {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  deletedAt DateTime? @map("deleted_at") @db.Timestamp(3)
  authType  AuthType  @default(USERNAME) @map("auth_type")
  openId    Int       @unique @map("open_id")
  userId    Int       @map("user_id")
  User      User      @relation(fields: [userId], references: [id])

  @@map("oauth")
}

enum AuthType {
  USERNAME @map("username")
  GITHUB   @map("github")

  @@map("auth_type")
}

model Note {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt   DateTime? @map("updated_at") @db.Timestamp(3)
  finishedAt  DateTime? @map("finished_at") @db.Timestamp(3)
  deletedAt   DateTime? @map("deleted_at") @db.Timestamp(3)
  name        String    @db.VarChar(50)
  description String?   @db.VarChar(255)
  priority    Int?      @default(0)
  index       Int       @default(0)
  toped       Boolean   @default(false)
  archieved   Boolean   @default(false)
  tasks       Task[]
  tags        Tag[]
  themes      Theme[]
  userId      Int       @map("user_id")
  User        User      @relation(fields: [userId], references: [id])

  @@map("note")
}

model Task {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt  DateTime? @map("updated_at") @db.Timestamp(3)
  finishedAt DateTime? @map("finished_at") @db.Timestamp(3)
  deletedAt  DateTime? @map("deleted_at") @db.Timestamp(3)
  finished   Boolean   @default(false)
  content    String?   @db.VarChar(255)
  linkUrl    String?   @map("link_url")
  index      Int       @default(0)
  noteId     Int       @map("note_id")
  Note       Note      @relation(fields: [noteId], references: [id])

  @@map("task")
}

model Tag {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  deletedAt DateTime? @map("deleted_at") @db.Timestamp(3)
  index     Int       @default(0)
  userId    Int       @map("user_id")
  User      User      @relation(fields: [userId], references: [id])
  noteId    Int       @map("note_id")
  Note      Note      @relation(fields: [noteId], references: [id])

  @@map("tag")
}

model Theme {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(3)
  deletedAt DateTime? @map("deleted_at") @db.Timestamp(3)
  index     Int       @default(0)
  userId    Int       @map("user_id")
  User      User      @relation(fields: [userId], references: [id])
  noteId    Int       @map("note_id")
  Note      Note      @relation(fields: [noteId], references: [id])

  @@map("theme")
}
