generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BRUCE_WORLD_DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  user_name  String  @unique
  name       String?
  avatar_url String?
  biography  String?
  email      String?
  location   String?
  OAuth      OAuth[]
}

model OAuth {
  id      Int  @id @default(autoincrement())
  open_id Int
  user_id Int
  User    User @relation(fields: [user_id], references: [id])
}

model Task {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(50)
  url          String?
  description  String?
  creationTime DateTime @default(now()) @map("creation_time") @db.Timestamp(6)
  complete     Boolean?
  priority     Int?     @default(0)
  top          Boolean?
  index        Int?     @default(0)
}
